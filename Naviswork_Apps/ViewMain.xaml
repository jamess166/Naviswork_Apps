<Window x:Class="Naviswork_Apps.ViewMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Naviswork_Apps"
        mc:Ignorable="d" Width="350" Height="180"
        MinWidth="350" MinHeight="180">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Para el Label -->
            <RowDefinition Height="*"/>
            <!-- Para el TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Para los Botones -->
        </Grid.RowDefinitions>

        <Label Content="Introduzca el ID:" Grid.Row="0" Margin="0,0,0,5"/>

        <TextBox Name="txtIds" Grid.Row="1"
                 Height="25"
                 TextWrapping="NoWrap" AcceptsReturn="True"                 
                 Background="White"
                 Foreground="Black"
                 BorderBrush="Black"
                 BorderThickness="1"
                 IsReadOnly="False"
                 IsEnabled="True"
                 Margin="0,10,0,15"/>

        <!-- Contenedor para los botones -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Para Preview -->
                <ColumnDefinition Width="Auto"/>
                <!-- Para Next -->
                <ColumnDefinition Width="Auto"/>
                <!-- Para Next -->
                <ColumnDefinition Width="*"/>
                <!-- Espaciador flexible -->
                <ColumnDefinition Width="Auto"/>
                <!-- Para Search -->
            </Grid.ColumnDefinitions>

            <Button x:Name="btn_preview" Content="Preview" Padding="10,5"
                    Click="btn_preview_Click" Grid.Column="0" Margin="0,0,5,0"/>

            <Button x:Name="btn_Next" Content="Next" Padding="10,5"
                    Click="btn_Next_Click" Grid.Column="1" Margin="0,0,15,0"/>

            <Button x:Name="btn_ActiveSection" Content="Section" Padding="10,5"
                    Click="btn_ActiveSection_Click" Visibility="Visible" Grid.Column="2"/>

            <Button Content="Search" Padding="10,5"
                    Click="Button_Click" Grid.Column="4"/>
        </Grid>
    </Grid>
</Window>

